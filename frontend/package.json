{
  "name": "laser-cutting-manager-frontend",
  "version": "0.1.0",
  "description": "激光切割生产管理系统",
  "author": "LaserCut Team",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -p 4000 -H 0.0.0.0",
    "build": "next build",
    "start": "next start -p 4000",
    "lint": "next lint",
    "build:electron": "next build && electron-builder",
    "build:win": "next build && electron-builder --win --x64",
    "build:win-exe": "next build && electron-builder --win --x64 --config.win.target=nsis",
    "build:win-portable": "next build && electron-builder --win --x64 --config.win.target=portable",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "electron-debug": "NODE_ENV=development ELECTRON_IS_DEV=1 electron . --enable-logging",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:4000 && npm run electron-debug\"",
    "debug": "npm run build && NODE_ENV=production electron . --enable-logging"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "axios": "^1.7.9",
    "dxf-parser": "^1.1.2",
    "dxf-viewer": "^1.0.43",
    "framer-motion": "^11.16.0",
    "next": "15.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "three": "^0.178.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/three": "^0.178.1",
    "autoprefixer": "^10.4.20",
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "com.lasercut.manager",
    "productName": "激光切割生产管理系统",
    "copyright": "Copyright © 2025",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "LaserCut Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "激光切割生产管理系统",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "language": "2052"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
