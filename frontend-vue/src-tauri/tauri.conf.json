{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "激光切割生产管理系统",
  "version": "1.0.0",
  "identifier": "com.laser-cutting.manager",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4001"
  },
  "app": {
    "windows": [
      {
        "title": "激光切割生产管理系统",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "copyright": "© 2025 激光切割管理系统",
    "shortDescription": "激光切割生产管理系统",
    "longDescription": "专业的激光切割生产管理系统，支持项目管理、板材状态追踪、图纸管理和工人资源管理。",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["SimpChinese"],
        "template": null
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "entitlements": null,
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}